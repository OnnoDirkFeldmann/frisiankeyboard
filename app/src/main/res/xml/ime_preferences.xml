<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:title="@string/settings_name">
    <Preference android:title="Enable app"
        android:key="enableapp"
        android:summary="1: Enable the app."/>
    <Preference android:title="Set as standard"
        android:key="standardapp"
        android:summary="2: Set the app as standard-input."/>
    <Preference android:title="Update dictionary"
        android:key="updatedics"
        android:summary="3: Update dictionary. Also run this after app-update."/>
    <Preference android:title="Delete dictionary"
        android:key="wipedata"
        android:summary="Delete dictionary. You should run this before uninstalling the App."/>
    <Preference android:title="Version"
        android:summary="@string/version"/>
</PreferenceScreen>
